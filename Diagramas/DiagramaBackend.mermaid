@startuml

' Parte lógica del servidor
class WebServer {
    +register()
    +login()
    +getCards()
    +getDecks()
    +createDeck()
    +deleteDeck()
    +addCardToDeck()
    +createMatch()
    +joinMatch()
    +playCard()
}

' Clases que acceden a la base de datos
class DAOUsers
class DAOCards
class DAODecks
class DAOMatches

' Entidades principales (datos reales)
class User {
    -id
    -username
    -password
    -email
}

class Card {
    -id
    -name
    -type
    -effect
}

class Deck {
    -id
    -name
    -user_id
}

class Match {
    -id
    -player1_id
    -player2_id
    -status
}

class DeckCard {
    -deck_id
    -card_id
    -quantity
}

' Relaciones (quién usa a quién)
WebServer --> DAOUsers
WebServer --> DAOCards
WebServer --> DAODecks
WebServer --> DAOMatches

DAOUsers --> User
DAOCards --> Card
DAODecks --> Deck
DAODecks --> DeckCard
DAOMatches --> Match

Deck --> DeckCard : contiene
DeckCard --> Card
Match --> User : jugadores
Match --> Deck : usa mazos

@enduml
